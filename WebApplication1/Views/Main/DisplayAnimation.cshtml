@{
        ViewBag.Title = "DisplayAnimation";
}

    <div>
        <style id="map1">

            html, body {
                margin: 0;
                height: 100%;
                width: 100%;
                background-image: url(../../../Content/export-map-share.png);
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
            }

            canvas {
                margin: 0;
                height: 100%;
                width: 100%;
                object-fit: cover;
                display: block;
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
            }

            img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            div {
                position: relative;
                height: 100%;
                width: 100%;
            }

            .bluePoint {
                position: static;
                background: Blue;
                height: 16px;
                width: 16px;
                border-radius: 50%;
            }
        </style>

        <canvas id="myCanvas" style="border:1px solid black;"></canvas>
    </div>

    <script src="jquery-1.10.2.min.js"></script>
    <head>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    </head>
    <script>
        var canvas = document.getElementById("myCanvas");
        var ctx = canvas.getContext("2d");
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        var x1 = 0;
        var y1 = 0;
        var x2 = 0;
        var y2 = 0;
        var IntervalTime = @Session["freq"] * 1000;
        var ip = @Session["ip"];
        var port = @Session["port"];
        Animation = (function () {
            $.post("@Url.Action("GetPoint")").done(function (xml) {
                var xmlDoc = $.parseXML(xml),
                $xml = $(xmlDoc),
                lon = $xml.find("Lon").text();
                lon = parseFloat(lon);
                lat = $xml.find("Lat").text();
                lat = parseFloat(lat);
                var canvas = document.getElementById("myCanvas");
                var ctx = canvas.getContext("2d");
                var renlon = Math.floor(Math.random() * 300) - 150;
                var renlat = Math.floor(Math.random() * 300) - 150;
                x2 = (lon + 180) * (canvas.width / 360) + renlon;
                y2 = (lat + 90) * (canvas.height / 180) + renlat;
                if (x1 != 0) {
                    ctx.beginPath();
                    ctx.moveTo(x1, y1);
                    ctx.lineTo(x2, y2);
                    ctx.stroke();
                    x1 = x2;
                    y1 = y2;
                    }
                else {
                    x1 = x2;
                    y1 = y2;
                    ctx.beginPath();
                    ctx.arc(x1, y1, 5, 0, 2 * Math.PI);
                    ctx.fill();
                    
                }
            });
        });
        setInterval(Animation, IntervalTime);
        Animation();
        $(window).on('beforeunload', function() {
            $.post("@Url.Action("ReloadPage")", ip, port);
            return;
});
        @*window.onbeforeunload = function (e) {
            //was load from network
            if (isNetworkDisplay == "1") {
                disconnect();
            }
            //was load from file
            else {
                $.post("@Url.Action("CloseFileRead")");
            }
        }*@
    </script>

